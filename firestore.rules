rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================================================
    // FIREBASE AUTHENTICATION RULES
    // ========================================================================
    // Rules untuk Firebase Authentication
    // Security dengan request.auth (user yang sudah login)
    // ========================================================================

    // Helper function - check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function - check if user is the owner
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Helper function - check if user is admin
    function isAdmin() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function - check if user is bendahara
    function isBendahara() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'bendahara';
    }

    // Helper function - check if user is sekretaris
    function isSekretaris() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'sekretaris';
    }

    // Helper function - check if user is staff (admin, bendahara, or sekretaris)
    function isStaff() {
      return isAdmin() || isBendahara() || isSekretaris();
    }

    // Helper function - check if data is valid
    function hasValidData() {
      return request.resource.data != null;
    }

    // ========================================================================
    // USERS COLLECTION - Firebase Auth Users
    // ========================================================================
    match /users/{userId} {
      // Read individual document: User bisa read data sendiri, staff bisa read semua
      allow get: if isOwner(userId) || isStaff();

      // List/Query: Allow authenticated users to query by email (for login fallback)
      // This is needed for legacy admin accounts where document ID != Firebase UID
      allow list: if isSignedIn();

      // Create: Hanya user yang baru register (auth.uid sama dengan userId)
      // Tidak perlu password field karena sudah di-handle Firebase Auth
      allow create: if isSignedIn() &&
                       request.auth.uid == userId &&
                       hasValidData() &&
                       'email' in request.resource.data &&
                       'nama' in request.resource.data &&
                       'role' in request.resource.data;

      // Update: User bisa update data sendiri (kecuali role), staff bisa update semua
      allow update: if (isOwner(userId) &&
                        (!('role' in request.resource.data) ||
                         request.resource.data.role == resource.data.role)) ||
                       isStaff();

      // Delete: Hanya admin yang bisa delete user
      allow delete: if isAdmin();
    }

    // ========================================================================
    // KYC DOCUMENTS COLLECTION - Know Your Customer Documents
    // ========================================================================
    match /kyc_documents/{documentId} {
      // Read: User bisa read KYC sendiri, admin bisa read semua
      allow read: if isSignedIn() &&
                     (request.auth.uid == resource.data.userId || isAdmin());

      // Create: User yang login bisa upload KYC untuk dirinya sendiri
      allow create: if isSignedIn() &&
                       hasValidData() &&
                       'userId' in request.resource.data &&
                       request.auth.uid == request.resource.data.userId &&
                       'documentType' in request.resource.data &&
                       'blobName' in request.resource.data &&
                       'status' in request.resource.data &&
                       request.resource.data.status == 'pending';

      // Update: User bisa update KYC sendiri (reupload), admin bisa approve/reject
      allow update: if (isSignedIn() && request.auth.uid == resource.data.userId) ||
                       isAdmin();

      // Delete: User bisa delete KYC sendiri, admin juga bisa
      allow delete: if (isSignedIn() && request.auth.uid == resource.data.userId) ||
                       isAdmin();
    }

    // ========================================================================
    // WARGA COLLECTION - Data Penduduk
    // ========================================================================
    match /warga/{wargaId} {
      // Read: Semua authenticated user bisa lihat
      allow read: if isSignedIn();

      // Create/Update/Delete: Hanya admin
      allow create, update, delete: if isAdmin();
    }

    // ========================================================================
    // DATA_PENDUDUK COLLECTION - Complete Resident Data (including keluargaId)
    // ========================================================================
    match /data_penduduk/{pendudukId} {
      // Read: User bisa read data sendiri, admin bisa read semua
      allow read: if isSignedIn() &&
                     (request.auth.uid == resource.data.userId || isAdmin());

      // Create: User yang baru register bisa create data penduduk untuk dirinya
      allow create: if isSignedIn() &&
                       hasValidData() &&
                       'userId' in request.resource.data &&
                       request.auth.uid == request.resource.data.userId &&
                       'namaLengkap' in request.resource.data &&
                       'nik' in request.resource.data;

      // Update: User bisa update data sendiri, admin bisa update semua
      allow update: if (isSignedIn() &&
                        'userId' in resource.data &&
                        request.auth.uid == resource.data.userId &&
                        request.resource.data.userId == resource.data.userId) ||
                       isAdmin();

      // Delete: Hanya admin yang bisa delete
      allow delete: if isAdmin();
    }

    // ========================================================================
    // AGENDA COLLECTION - Kegiatan & Broadcast
    // ========================================================================
    match /agenda/{agendaId} {
      // Read: Semua authenticated user bisa lihat
      allow read: if isSignedIn();

      // Create/Update/Delete: Hanya admin
      allow create, update, delete: if isAdmin();
    }

    // ========================================================================
    // PENGUMUMAN COLLECTION - Announcements
    // ========================================================================
    match /pengumuman/{pengumumanId} {
      // Read: Semua authenticated user bisa lihat
      allow read: if isSignedIn();

      // Create/Update/Delete: Hanya admin
      allow create, update, delete: if isAdmin();
    }

    // ========================================================================
    // KEUANGAN COLLECTIONS
    // ========================================================================
    match /keuangan/{transactionId} {
      allow read: if isSignedIn();

      // Create: Admin bisa create apapun, Warga hanya bisa create pemasukan iuran mereka sendiri
      allow create: if isAdmin() || (
        isSignedIn() &&
        // Validasi: Harus pemasukan dari iuran
        request.resource.data.jenis == 'Pemasukan' &&
        request.resource.data.kategori == 'Iuran Warga' &&
        // Validasi: keluargaId harus sesuai dengan keluargaId user
        request.resource.data.keluargaId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.keluargaId &&
        // Validasi: Harus ada tagihanId (reference)
        'tagihanId' in request.resource.data &&
        // Validasi: Harus ada buktiTransaksi
        'buktiTransaksi' in request.resource.data &&
        // Validasi: Harus ada required fields
        'nominal' in request.resource.data &&
        'tanggal' in request.resource.data &&
        'jenisIuranId' in request.resource.data &&
        'jenisIuranName' in request.resource.data &&
        'periode' in request.resource.data
      );

      allow update, delete: if isAdmin();
    }

    match /pemasukan/{pemasukanId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /pengeluaran/{pengeluaranId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /jenis_iuran/{jenisIuranId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /tagihan/{tagihanId} {
      // Read: Warga bisa baca tagihan keluarganya, admin bisa baca semua
      allow read: if isSignedIn() && (
        resource.data.keluargaId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.keluargaId ||
        isAdmin()
      );

      // Create: Hanya admin
      allow create: if isAdmin();

      // Update: Admin full access, warga bisa update untuk submit bukti pembayaran
      allow update: if isAdmin() || (
        isSignedIn() &&
        // Warga hanya bisa update tagihan keluarganya sendiri
        resource.data.keluargaId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.keluargaId &&
        // Hanya field berikut yang boleh diubah warga saat submit bukti:
        request.resource.data.diff(resource.data).affectedKeys().hasOnly([
          'buktiPembayaran',
          'metodePembayaran',
          'tanggalBayar',
          'updatedAt',
          'status'
        ]) &&
        // Status hanya boleh diubah ke "Lunas" (auto-paid) atau tetap sama
        (request.resource.data.status == 'Lunas' ||
         request.resource.data.status == resource.data.status)
      );

      // Delete: Hanya admin
      allow delete: if isAdmin();
    }

    match /keluarga/{keluargaId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // LAPORAN KEUANGAN - Transparansi keuangan untuk warga
    match /laporan_keuangan/{laporanId} {
      // Read: Semua authenticated user bisa lihat laporan yang published
      allow read: if isSignedIn() && resource.data.is_published == true;

      // Create: Hanya admin yang bisa publish laporan
      allow create: if isAdmin() &&
                       hasValidData() &&
                       'judul' in request.resource.data &&
                       'periode' in request.resource.data &&
                       'jenis_laporan' in request.resource.data &&
                       'created_by' in request.resource.data &&
                       'statistik' in request.resource.data &&
                       'is_published' in request.resource.data;

      // Update: Admin bisa update laporan, warga bisa update views_count
      allow update: if isAdmin() ||
                       (isSignedIn() &&
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views_count']) &&
                        request.resource.data.views_count == resource.data.views_count + 1);

      // Delete: Hanya admin
      allow delete: if isAdmin();
    }

    // ========================================================================
    // OTHER COLLECTIONS
    // ========================================================================
    match /rumah/{rumahId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /mutasi/{mutasiId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /pending_warga/{pendingId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /pemasukan_lain/{pemasukanLainId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /mutasi_warga/{mutasiId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // ========================================================================
    // MARKETPLACE PRODUCTS COLLECTION
    // ========================================================================
    match /marketplace_products/{productId} {
      // Read: Semua authenticated user bisa lihat produk
      allow read: if isSignedIn();

      // Create: User yang login bisa create produk sebagai seller
      // Validasi: sellerId harus sama dengan auth.uid
      allow create: if isSignedIn() &&
                       hasValidData() &&
                       'sellerId' in request.resource.data &&
                       request.auth.uid == request.resource.data.sellerId &&
                       'productName' in request.resource.data &&
                       'description' in request.resource.data &&
                       'price' in request.resource.data &&
                       'stock' in request.resource.data &&
                       'category' in request.resource.data &&
                       'imageUrls' in request.resource.data &&
                       'unit' in request.resource.data &&
                       request.resource.data.price is number &&
                       request.resource.data.price > 0 &&
                       request.resource.data.stock is number &&
                       request.resource.data.stock >= 0 &&
                       request.resource.data.imageUrls is list &&
                       request.resource.data.imageUrls.size() > 0 &&
                       request.resource.data.imageUrls.size() <= 5;

      // Update:
      // - Seller bisa update semua field produknya
      // - Buyer bisa update stock & soldCount saat checkout (untuk kurangi stock)
      allow update: if isSignedIn() && (
                       // Seller update produknya sendiri
                       (resource.data.sellerId == request.auth.uid &&
                        request.resource.data.sellerId == resource.data.sellerId) ||
                       // Buyer update stock & soldCount saat order (hanya field ini)
                       (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stock', 'soldCount']) &&
                        request.resource.data.sellerId == resource.data.sellerId)
                     );

      // Delete: Seller bisa delete produknya sendiri
      allow delete: if isSignedIn() && resource.data.sellerId == request.auth.uid;
    }

    // ========================================================================
    // PRODUCTS COLLECTION - Produk Sayuran (Alternative Collection)
    // ========================================================================
    match /products/{productId} {
      // Read: Semua authenticated user bisa lihat produk aktif
      allow read: if isSignedIn();

      // Create: User yang login bisa create produk sebagai seller
      allow create: if isSignedIn() &&
                       hasValidData() &&
                       'sellerId' in request.resource.data &&
                       request.auth.uid == request.resource.data.sellerId;

      // Update: Seller bisa update produknya sendiri, atau buyer bisa update stock
      allow update: if isSignedIn() && (
                       // Seller update produknya sendiri
                       (resource.data.sellerId == request.auth.uid &&
                        request.resource.data.sellerId == resource.data.sellerId) ||
                       // Buyer update stok & soldCount saat order
                       (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stok', 'soldCount']) &&
                        request.resource.data.sellerId == resource.data.sellerId)
                     );

      // Delete: Seller bisa delete produknya sendiri atau admin
      allow delete: if isSignedIn() &&
                       (resource.data.sellerId == request.auth.uid || isAdmin());
    }

    // ========================================================================
    // MARKETPLACE SELLERS COLLECTION (approved sellers)
    // ========================================================================
    match /marketplace_sellers/{sellerId} {
      // Read: Semua authenticated user bisa lihat seller yang approved
      allow read: if isSignedIn();

      // Create: Hanya admin yang bisa create (dari approval)
      allow create: if isAdmin();

      // Update: Seller bisa update data sendiri, admin bisa update semua
      allow update: if isSignedIn() &&
                       (request.auth.uid == sellerId || isAdmin());

      // Delete: Hanya admin yang bisa delete
      allow delete: if isAdmin();
    }

    // ========================================================================
    // KELOLA LAPAK - MARKETPLACE SELLER MANAGEMENT
    // ========================================================================

    // Pending Sellers - Seller yang menunggu verifikasi
    match /pending_sellers/{sellerId} {
      // Read: Admin bisa read semua, user bisa read data sendiri
      allow read: if isSignedIn() &&
                     (isAdmin() || request.auth.uid == resource.data.userId);

      // Create: Warga yang login bisa daftar sebagai seller
      allow create: if isSignedIn() &&
                       hasValidData() &&
                       'userId' in request.resource.data &&
                       request.auth.uid == request.resource.data.userId &&
                       'nik' in request.resource.data &&
                       'namaLengkap' in request.resource.data &&
                       'namaToko' in request.resource.data &&
                       'nomorTelepon' in request.resource.data &&
                       'alamatToko' in request.resource.data &&
                       'fotoKTPUrl' in request.resource.data &&
                       'fotoSelfieKTPUrl' in request.resource.data &&
                       'status' in request.resource.data &&
                       request.resource.data.status == 'pending';

      // Update: Admin bisa approve/reject/suspend, User bisa update data sendiri (re-submit)
      allow update: if isAdmin() ||
                       (isSignedIn() &&
                        request.auth.uid == resource.data.userId &&
                        request.resource.data.status == 'pending');

      // Delete: Hanya admin
      allow delete: if isAdmin();
    }

    // Approved Sellers - Seller yang sudah disetujui
    match /approved_sellers/{sellerId} {
      // Read: Semua authenticated user bisa lihat (untuk marketplace)
      allow read: if isSignedIn();

      // Create: Hanya admin (saat approve seller)
      allow create: if isAdmin();

      // Update: Admin bisa update (suspend/reactivate), Seller bisa update info toko
      allow update: if isAdmin() ||
                       (isSignedIn() && request.auth.uid == resource.data.userId);

      // Delete: Hanya admin
      allow delete: if isAdmin();
    }

    match /notifications/{notificationId} {
      // User bisa read notifikasi sendiri, create untuk diri sendiri
      allow read: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    match /settings/{settingId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /dashboard_stats/{statId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // ========================================================================
    // MARKETPLACE CART COLLECTION
    // ========================================================================
    // Keranjang belanja untuk marketplace
    // ========================================================================
    match /marketplace_cart/{cartItemId} {
      // Helper function - Check if user is the cart owner
      function isCartOwner() {
        return isSignedIn() && request.auth.uid == resource.data.userId;
      }

      // Helper function - Check if user will be the cart owner (for create)
      function willBeCartOwner() {
        return isSignedIn() && request.auth.uid == request.resource.data.userId;
      }

      // Helper function - Validate cart item data
      function isValidCartItem() {
        let data = request.resource.data;
        return data.keys().hasAll([
          'id', 'userId', 'productId', 'sellerId',
          'productName', 'productImage', 'price',
          'quantity', 'unit', 'maxStock', 'addedAt', 'isSelected'
        ])
        && data.userId is string
        && data.productId is string
        && data.sellerId is string
        && data.productName is string
        && data.productImage is string
        && data.price is number
        && data.quantity is int
        && data.unit is string
        && data.maxStock is int
        && data.addedAt is timestamp
        && data.isSelected is bool
        && data.quantity > 0
        && data.quantity <= data.maxStock
        && data.price >= 0;
      }

      // READ: User hanya bisa read cart sendiri
      allow read: if isCartOwner();

      // CREATE: User bisa create cart item untuk dirinya sendiri
      allow create: if willBeCartOwner() && isValidCartItem();

      // UPDATE: User hanya bisa update cart sendiri dengan data valid
      allow update: if isCartOwner() && isValidCartItem();

      // DELETE: User hanya bisa delete cart sendiri
      allow delete: if isCartOwner();
    }

    // ========================================================================
    // MARKETPLACE ORDERS COLLECTION
    // ========================================================================
    // Pesanan marketplace (history pesanan)
    // ========================================================================
    match /marketplace_orders/{orderId} {
      // READ: Any authenticated user can read
      allow read: if isSignedIn();

      // LIST/QUERY: Any authenticated user can query
      allow list: if isSignedIn();

      // CREATE: Any authenticated user can create order
      allow create: if isSignedIn();

      // UPDATE: Any authenticated user can update
      allow update: if isSignedIn();

      // DELETE: Only admin can delete
      allow delete: if isAdmin();
    }

    // ========================================================================
    // IURAN COLLECTION - Manajemen Iuran/Fee
    // ========================================================================
    match /iuran/{iuranId} {
      // Read: Semua authenticated user bisa lihat iuran
      allow read: if isSignedIn();

      // Create: Hanya admin yang bisa create iuran baru
      allow create: if isAdmin() &&
                       hasValidData() &&
                       'judul' in request.resource.data &&
                       'deskripsi' in request.resource.data &&
                       'nominal' in request.resource.data &&
                       'tanggalJatuhTempo' in request.resource.data &&
                       'tanggalBuat' in request.resource.data &&
                       'tipe' in request.resource.data &&
                       'status' in request.resource.data &&
                       request.resource.data.nominal is number &&
                       request.resource.data.nominal > 0;

      // Update: Hanya admin yang bisa update iuran
      allow update: if isAdmin();

      // Delete: Hanya admin yang bisa delete iuran
      allow delete: if isAdmin();
    }

    // NOTE: tagihan collection rules already defined above (around line 171)
    // Removed duplicate definition to fix compilation error

  }
}
